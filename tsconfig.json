{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020", "DOM"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true,
		"strict": true,
		"noEmit": true,
		"skipLibCheck": true,
		"types": ["webextension-polyfill"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
