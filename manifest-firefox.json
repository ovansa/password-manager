{
	"manifest_version": 3,
	"name": "Sabi Fill",
	"version": "1.0",
	"description": "Fills form fields with fake test data.",
	"permissions": ["scripting", "activeTab", "<all_urls>", "storage"],
	"background": {
		"scripts": ["background.js"]
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	}
}
